<%- include('../partials/header') %> <br>
    <div class="container">
        <h3 class="text-center">Edit Employee</h3>
        <form action="/Employee/<%= Employee._id %>?_method=PUT" method="post" style="max-width: 75%;margin:0 auto">
            <input class="form-control" placeholder="" type="Email" name="Email" id="" value="<%= Employee.Email %> "
                disabled> <br>
            <div class="row">
                <div class="col">
                    <input class="form-control" placeholder="Firstname.." type="text" name="Firstname" id=""
                        value="<%= Employee.Firstname %> "> <br>
                    <input class="form-control" placeholder="Lastname.." type="text" name="Lastname" id=""
                        value="<%= Employee.Lastname %> "> <br>
                    <input class="form-control" placeholder="username.." type="text" name="username" id=""
                        value="<%= Employee.username %> "> <br>
                    <input class="form-control" placeholder="Phone..." type="tel" name="Phone"
                        value="<%= Employee.Phone %> "><br>
                    <input class="form-control" placeholder="" type="date" name="" id="" placeholder="BirthDate ..."
                        value="<%= Employee.birthDate %> ">
                    <br>
                </div>
                <div class="col">
                    <select name="driverLicence" id="" class="form-select">
                        <option value="" selected disabled>Do you have a driver Licence?</option>
                        <option value="Yes">Yes</option>
                        <option value="No">No</option>
                    </select> <br>
                    <select name="Gender" id="" class="form-select">
                        <option value="" selected disabled>Select Your Gender ...</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select> <br>
                    <select name="userRole" id="" class="form-select">
                        <option value="" disabled selected>Employee Role ...</option>
                        <option value="Employee">Employee</option>
                        <option value="Admin">Admin</option>
                        <option value="HOD">HOD</option>
                        <option value="HR">HR</option>
                    </select> <br>
                    <input class="form-control" placeholder="Nationality.." type="text" name="Nationality"
                        value="<%= Employee.Nationality %> "> <br>

                    <input class="form-control" placeholder="Location.." type="text" name="Location" id=""
                        value="<%= Employee.Location %> "> <br>
                </div>
            </div>
            <button type="submit" class="btn btn-success" style="width: 100%;">Edit</button>
        </form>
    </div>