<%- include('../partials/header') %> <br>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/MaterialDesign-Webfont/4.9.95/css/materialdesignicons.css"
        rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-nice-select/1.1.0/js/jquery.nice-select.min.js"
        integrity="sha256-Zr3vByTlMGQhvMfgkQ5BtWRSKBGa2QlspKYJnkjZTmo=" crossorigin="anonymous"></script>
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/jquery-nice-select/1.1.0/css/nice-select.min.css"
        integrity="sha256-mLBIhmBvigTFWPSCtvdu6a76T+3Xyt+K571hupeFLg4=" crossorigin="anonymous" />

    <div class="container">
        <form action="/Employee" method="post">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="text-dark">General Information</h3>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="job-detail mt-2 p-4">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="resume-user mb-5">
                                    <i class="mdi mdi-account text-white"></i>
                                </div>
                            </div>
                        </div>

                        <div class="custom-form">


                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group app-label">
                                        <label for="" class="text-muted">Firstname</label>
                                        <input id="" name="Firstname" type="text" class="form-control resume"
                                            placeholder="Firstname" required>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group app-label">
                                        <label for="" class="text-muted">Lastname</label>
                                        <input type="text" name="Lastname" class="form-control resume"
                                            placeholder="Lastname" required>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group app-label">
                                        <label for="s" class="text-muted">Nationality</label>
                                        <input name="Nationality" type="text" class="form-control resume"
                                            placeholder="Nationality" required>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group app-label">
                                        <label for="" class="text-muted">Date Of Birth</label>
                                        <input id="date-of-birth" type="date" class="form-control resume"
                                            name="birthDate" required>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group app-label">
                                        <label for="General" class="text-muted">Gender</label>
                                        <div class="form-button">
                                            <select class="nice-select" name="Gender" required>
                                                <option selected disabled>...</option>
                                                <option value="Male">Male</option>
                                                <option value="Female">Female</option>
                                                <option value="Other">Other</option>
                                            </select>

                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group app-label">
                                        <label for="marital-status" class="text-muted">Blood Type</label>
                                        <div class="form-button">
                                            <select class="nice-select" name="bloodType">
                                                <option disabled selected>...</option>
                                                <option value="A+">A+</option>
                                                <option value="A-">A-</option>
                                                <option value="B+">B+</option>
                                                <option value="B-">B-</option>
                                                <option value="O+">O+</option>
                                                <option value="O-">O-</option>
                                                <option value="AB+">AB+</option>
                                                <option value="AB-">AB-</option>
                                            </select>

                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group app-label">
                                        <label for="General" class="text-muted">Driver Licence</label>
                                        <div class="form-button">
                                            <select class="nice-select" name="driverLicence">
                                                <option selected disabled>...</option>
                                                <option value="Yes">Yes</option>
                                                <option value="No">No</option>
                                            </select>

                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <h3 class="text-dark mt-5">Contact Information</h3>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="job-detail mt-2 p-4">
                        <div class="custom-form">

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group app-label">
                                        <label for="phone" class="text-muted">Phone</label>
                                        <input name="Phone" type="tel" class="form-control resume" placeholder="Phone">
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group app-label">
                                        <label for="e-mail" class="text-muted">E-mail</label>
                                        <input id="e-mail" name="Email" type="email" class="form-control resume"
                                            placeholder="E-mail" required>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group app-label">
                                        <label for="" class="text-muted">Location</label>
                                        <input name="Location" type="address" class="form-control resume"
                                            placeholder="Location">
                                    </div>
                                </div>


                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <h3 class="text-dark mt-5">Job Information</h3>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="job-detail mt-2 p-4">
                        <div class="custom-form">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group app-label">
                                                <label for="level" class="text-muted">Role</label>
                                                <div class="form-button">
                                                    <select class="nice-select" name="userRole" required>
                                                        <option disabled selected>...</option>
                                                        <option value="Admin">Admin</option>
                                                        <option value="HR">HR</option>
                                                        <option value="HOD">HOD</option>
                                                        <option value="Employee">Employee</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group app-label">
                                                <label for="" class="text-muted">Job Description</label>
                                                <input name="JD" type="text" class="form-control resume"
                                                    placeholder="Job Description">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <h3 class="text-dark mt-5">Login Information</h3>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="job-detail mt-2 p-4">
                        <div class="custom-form">

                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group app-label">
                                        <label for="" class="text-muted">Username</label>
                                        <input id="" type="text" class="form-control resume" name="username"
                                            placeholder="Username" required>
                                    </div>
                                </div>

                                <div class="col-lg-12">
                                    <div class="form-group app-label">
                                        <label for="" class="text-muted">Password</label>
                                        <input name="password" type="password" class="form-control resume"
                                            placeholder="Password" required>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <div class="row my-3">
                <div class="col-lg-12">
                    <div class="text-center">
                        <button type="submit" class="btn btn-outline-primary btn-lg">Submit</button>
                    </div>
                </div>
            </div>
        </form>
    </div>