<%- include('../partials/header') %>
    <div class="container ">
        <div class="main-body">
            <%- include('../partials/messages') %>
                <div class="row gutters-sm">
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex flex-column align-items-center text-center">
                                    <div class="mt-3">
                                        <h4 class="text-danger">
                                            <%= `${Employee.Firstname.toUpperCase()} ${Employee.Lastname.toUpperCase()}`
                                                %>
                                        </h4>
                                        <p class="text-secondary mb-1">
                                            <small>
                                                <%= Employee.JD %>
                                            </small>
                                        </p>
                                        <p class="text-muted font-size-sm">
                                            <small>
                                                joined <%= moment(Employee.join).format('Do MMM YYYY'); %>
                                            </small>
                                        </p>
                                        <a href="/Employee/<%=Employee._id%>/edit">
                                            <button class="btn btn-outline-primary">Sittings</button>
                                        </a>
                                        <a href="/logout">
                                            <button class="btn btn-outline-danger">Logout</button>
                                        </a>
                                        <button onclick="window.print()" class="btn btn-outline-info">Print</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card mt-3">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                    <h6 class="mb-0"><i class="fa-brands fa-linkedin"></i> Linkdin</h6>
                                    <span class="text-secondary">
                                        ...
                                    </span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                    <h6 class="mb-0"><i class="fa-brands fa-square-facebook"></i> Facebook</h6>
                                    <span class="text-secondary">
                                        ...
                                    </span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                    <h6 class="mb-0"><i class="fa-brands fa-square-instagram"></i> Instagram</h6>
                                    <span class="text-secondary">
                                        ...
                                    </span>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="text-danger border-bottom border-danger my-3">Generel info</h5>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Full Name</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <%= `${Employee.Firstname} ${Employee.Lastname}` %>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Birhtdate</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <%= moment(Employee.birthDate).format('LL') %>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Blood Type</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <%=Employee.bloodType %>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Nationality</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <%=Employee.Nationality %>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">driver Licence</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <%=Employee.driverLicence %>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Gender</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <%=Employee.Gender %>
                                    </div>
                                </div>
                                <h5 class="text-danger border-bottom border-danger my-3">Contact info</h5>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Email</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <%= Employee.Email %>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Phone</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <%= Employee.Phone %>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Address</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <%= Employee.Location %>
                                    </div>
                                </div>
                                <h5 class="text-danger border-bottom border-danger my-3">User info</h5>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">username</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <%= Employee.username %>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Role</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <%= Employee.userRole %>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
        </div>
    </div>