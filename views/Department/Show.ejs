<div class="container ">
    <div class="main-body">
        <div class="row gutters-sm">

            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="text-danger border-bottom border-danger my-3">
                        <%= Department.Name %>
                    </h5>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Head of Department</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            <%= Department.HOD %>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Employees</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            <ul>
                                <% Department.Employees.map(e=>{ %>
                                    <li>
                                        <%= `${e.Firstname} ${e.Lastname}`%>
                                    </li>
                                    <% }) %>
                            </ul>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Description</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            <%= Department.Description %>
                        </div>
                    </div>

                </div>
            </div>


        </div>
    </div>
</div>