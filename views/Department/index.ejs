<%- include('../partials/header') %>
    <br>
    <div class="container">
        <h2>Departments</h2> <br>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scole="col">Stuff</th>
                    <th scope="col">Description</th>
                </tr>
            </thead>
            <tbody>
                <% for(let dep of Department){ %>

                    <tr>
                        <td>

                            <%= dep.departmentId %>
                        </td>
                        <td>
                            <%= dep.departmentName %>
                        </td>
                        <td>
                            <% Array.from(dep.depEmployees).forEach(e=> { %>
                                <i class="fa-regular fa-face-smile text-danger"></i>
                                <%= `${e.Firstname} ${e.Lastname}` %> <br>
                                    <% }); %>
                        </td>
                        <td style="width: 40%;">
                            <%= dep.Description %>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>
    <br>