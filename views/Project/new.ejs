<%- include('../partials/header') %> <br>
    <div class="container">
        <form action="/Project" method="post">
            <div class="row">
                <div class="col-lg-12">
                    <div class="job-detail mt-2 p-4">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="mb-5 text-danger text-center">
                                    Create Project
                                </div>
                            </div>
                        </div>
                        <div class="custom-form">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group app-label">
                                        <label for="" class="text-muted">Title</label>
                                        <input name="Title" type="text" class="form-control resume" placeholder="Title">
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group app-label">
                                        <label for="" class="text-muted">Start Date</label>
                                        <input type="date" name="startDate" class="form-control resume" required>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group app-label">
                                        <label for="" class="text-muted">Due Date</label>
                                        <input name="dueDate" type="date" class="form-control resume" required>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group app-label">
                                        <label for="" class="text-muted">Status</label>
                                        <select name="Status" class="form-select">
                                            <option value="" selected disabled>
                                                ...
                                            </option>
                                            <option value="Upcoming">Upcoming</option>
                                            <option value="In progress">In progress</option>
                                            <option value="Done">Done</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group app-label">
                                        <label class="text-muted">created By</label>
                                        <input type="text" class="form-control" name="Proof"
                                            value="<%= currentUser._id %>" readonly>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row my-3">
                <div class="col-lg-12">
                    <div class="text-center">
                        <button type="submit" class="btn btn-outline-primary btn-lg">Submit</button>
                    </div>
                </div>
            </div>
        </form>
    </div>