<%- include('../partials/header') %>
    <br>

    <div class="container">
        <div class="d-flex gap-1">
            <h2>Projects</h2>
            <a href="/Project/new">
                <button class="btn btn-outline-primary"><i class="fa-solid fa-circle-plus"></i></button>
            </a>
        </div>
        <%- include('../partials/messages') %>
            <br>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Employees</th>
                        <th scope="col">Title</th>
                        <th scope="col">Starts</th>
                        <th scope="col">Due Date</th>
                        <th scope="col">Status</th>
                        <th scope="col">Created By...</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let Pr of Project){ %>
                        <tr>
                            <td>
                                <% Pr.employeeId.forEach(e=>{%>
                                    <%= `${e.Firstname} ${e.Lastname}`%>
                                        <% }) %>
                            </td>
                            <td>
                                <%= Pr.Title %>
                            </td>
                            <td>
                                <%= moment(Pr.startDate).format('MMM Do YY') %>
                            </td>
                            <td>
                                <%= moment(Pr.dueDate).format('MMM Do YY') %>
                            </td>
                            <td>
                                <%= Pr.Status %>
                            </td>
                            <td>
                                <%= Pr.createdBy %>
                            </td>
                            <td>
                                <div class="d-flex justify-content-start gap-1">
                                    <form action="/Project/<%= Pr._id%>?_method=DELETE" method="post">
                                        <button class="btn btn-outline-danger"><i
                                                class="fa-solid fa-trash"></i></button>
                                    </form>
                                    <a href="/Project/<%= Pr._id %>/edit" class="btn btn-outline-success"><i
                                            class="fa-solid fa-wrench"></i></a>
                                </div>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>

    </div>