<%- include('../partials/header') %>
    <br>

    <div class="container">
        <div class="d-flex gap-1">
            <h2>Projects</h2>
            <a href="/Project/new">
                <button class="btn btn-outline-primary"><i class="fa-solid fa-circle-plus"></i></button>
            </a>
        </div>
        <%- include('../partials/messages') %>
            <br>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Project Id</th>
                        <th scope="col">Employee Id</th>
                        <th scope="col">Title</th>
                        <th scope="col">Due Date</th>
                        <th scope="col">Deadline</th>
                        <th scope="col">Status</th>
                        <th scope="col">Created By...</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let Pr of Project){ %>
                        <tr>
                            <td>
                                <%= Pr.projectId %>
                            </td>
                            <% if(Pr.employeeId !='' ){ %>
                                <td>
                                    <%= Pr.employeeId%>
                                </td>
                                <% }else{ %>
                                    <td>
                                        <span class="text-danger">Project has not been assigned to any employee
                                        </span>
                                    </td>
                                    <% } %>

                                        <td>
                                            <%= Pr.projectTitle %>
                                        </td>
                                        <td>
                                            <%= moment(Pr.projectStart).format('MMM Do YY') %>
                                        </td>
                                        <td>
                                            <%= moment(Pr.projectEnd).format('MMM Do YY') %>
                                        </td>
                                        <td>
                                            <%= Pr.completetionStatus %>
                                        </td>
                                        <td>
                                            <%= Pr.createdBy %>
                                        </td>
                                        <td>
                                            <div class="d-flex justify-content-start gap-1">
                                                <form action="/Project/<%= Pr._id%>?_method=DELETE" method="post">
                                                    <button class="btn btn-danger">Delete</button>
                                                </form>
                                                <a href="/Project/<%= Pr._id %>/edit" class="btn btn-success">Update</a>
                                            </div>
                                        </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>

    </div>