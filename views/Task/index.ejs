<%- include('../partials/header') %>
    <br>
    <%- include('../partials/messages') %>
        <div class="container">
            <div class="d-flex gap-1">
                <h2>Taks</h2>
                <a href="/Task/new">
                    <button class="btn btn-light">New</button>
                </a>
            </div>

            <br>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Id </th>
                        <th scope="col">Due Date</th>
                        <th scope="col">Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let Tsk of Task){ %>
                        <tr>
                            <td>
                                <%= Tsk.taskId %>
                            </td>

                            <td>
                                <%= moment(Tsk.dueDate).format('LL') %>
                            </td>
                            <td>
                                <%= Tsk.taskStatus %>
                            </td>

                            <td>
                                <div class="d-flex justify-content-start gap-1">
                                    <form action="/Tasks/<%= Tsk._id%>?_method=DELETE" method="post">
                                        <button class="btn btn-danger">Delete</button>
                                    </form>
                                    <a href="/Tasks/<%= Tsk._id %>/edit" class="btn btn-success">Update</a>
                                    <a href="/Tasks/<%= Tsk._id %>" class="btn btn-primary">More</a>
                                </div>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>

        </div>