<%- include('../partials/header') %>
    <br>
    <%- include('../partials/messages') %>
        <div class="container">
            <div class="d-flex gap-1">
                <h2>Leaves</h2>
                <a href="/Leave/new">
                    <button class="btn btn-light">New</button>
                </a>
            </div>

            <br>
            <table class="table table-hover table-bordered border-light">
                <thead>
                    <tr>
                        <th scope="col">Employee</th>
                        <th scope="col">Starts</th>
                        <th scope="col">Ends</th>
                        <th scope="col">submission</th>
                        <th scope="col">Status</th>
                        <th scope="col">Attachment</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let Lv of Leave){ %>
                        <tr>
                            <td>
                                <%= Lv.employeeId %>
                            </td>

                            <td>
                                <%= moment(Lv.startDate).format('L')%>
                            </td>
                            <td>
                                <%= moment(Lv.dueDate).format('L') %>
                            </td>
                            <td>
                                <%= moment(Lv.submissionDate).calendar() %>
                            </td>
                            <td>
                                <%= Lv.leaveStatus %>
                            </td>
                            <td>
                                <%= Lv.attachment %>
                            </td>
                            <td>
                                <div class="d-flex justify-content-start gap-1">
                                    <form action="/Leave/<%= Lv._id%>?_method=DELETE" method="post">
                                        <button class="btn btn-danger">Delete</button>
                                    </form>
                                    <a href="/Leave/<%= Lv._id %>/edit" class="btn btn-success">Update</a>
                                </div>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>

        </div>