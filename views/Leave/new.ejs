<%- include('../partials/header') %> <br>
    <div class="container">
        <form action="/Leave" method="post">
            <div class="row">
                <div class="col-lg-12">
                    <div class="job-detail mt-2 p-4">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="mb-5 text-danger text-center">
                                    <i class="fa-solid fa-right-from-bracket"></i>
                                </div>
                            </div>
                        </div>
                        <div class="custom-form">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group app-label">
                                        <label for="" class="text-muted">Id</label>
                                        <input id="" name="employeeId" type="text" class="form-control resume"
                                            value="<%= currentUser._id %>" readonly>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group app-label">
                                        <label for="" class="text-muted">Start Date</label>
                                        <input type="date" name="startDate" class="form-control resume" required>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group app-label">
                                        <label for="" class="text-muted">Due Date</label>
                                        <input name="dueDate" type="date" class="form-control resume" required>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group app-label">
                                        <label for="" class="text-muted">Proof</label>
                                        <input id="" type="file" class="form-control" name="Proof">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row my-3">
                <div class="col-lg-12">
                    <div class="text-center">
                        <button type="submit" class="btn btn-outline-primary btn-lg">Submit</button>
                    </div>
                </div>
            </div>
        </form>
    </div>